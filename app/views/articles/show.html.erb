  <p style="color: green"><%= notice %></p>
  <div class="row">
    <%= render 'articlenew', variable_local: @article %>
  </div>
 
  <div class="row mt-4 mb-4">
      <% Article::Kinds.each do |kind| %>
        <div class="col-2 col-xl-2 col-lg-2 col-md-2 col-sm-12 col-xs-12">
        <%= button_to"#{Article::KindsSpanish[kind]}", new_user_reaction_path(article_id: @article.id, reaction_type:"article", kind: kind), method: :post, class:"btn btn-success btn-sm btn-block", style:"width:100% !important" %>
        </div>
      <% end %>
  </div>
  
  <div class="row pt-4 pb-4">
      <%= render 'comments/form' %>
  </div>

  <div class="row">
    <p class="d-inline-flex gap-1">
      <%= button_to "Destroy this article", @article, method: :delete , class:"btn btn-primary btn-sm" %>
    </p>
  </div>