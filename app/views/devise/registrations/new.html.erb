<div class="row">

  <div class="col-6 offset-3 col-xl-6 offset-3 col-lg-6 offset-3 col-md-6 offset-3 col-sm-12 col-xs-12">

    <h2>Registrarse</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">

          <%= render "devise/shared/error_messages", resource: resource %>
          
        </div>
        

        <div class="form-group mb-3">

          <%= f.label :email %>

          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control input-sm" %>

        </div>

        <div class="form-group mb-3">

          <%= f.label :password %>

          <% if @minimum_password_length %>

          <em>( MÃ­nimo <%= @minimum_password_length %> caracteres)</em>

          <% end %>
          
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control input-sm" %>

        </div>

        <div class="form-group mb-3">

          <%= f.label "Repita su password" %>

          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control input-sm" %>

        </div>

        <div class="form-group mb-3">

          <%= f.label "Nombre" %>

          <%= f.text_field :name, autocomplete: "name", class:"form-control input-sm" %>

        </div>

        <div class="form-group mb-3">

          <%= f.label "Imagen de perfil" %>

          <%= f.text_field :photo, autocomplete: "photo", class:"form-control input-sm" %>

        </div>

        <div class="form-group mb-3">

          <%= f.submit "Registrarse", class:"btn btn-primary btn-sm"  %>

        </div>

      <% end %>

    <%= render "devise/shared/links" %>

    </div>

</div>
