<div class="row">

  <div class="col-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 offset-3 offset-lg-3 offset-md-3 mt-5">  <h2>Olvidó su contraseña?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control input-sn" %>
      </div>

      <div class="form-group mb-3">
        <%= f.submit "Enviar intrucciones al email", class:"btn btn-primary btn-sm" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>


